{
  "compilerOptions": {
    "target": "esnext",
    // "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "module": "ESNext",
    "noEmit":true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "allowJs": true,       
    "checkJs": true,               
    "jsx": "react",
    "baseUrl": ".",
    "skipLibCheck": true, // Пропуск проверки типов в библиотеках
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules"] // Исключить папку node_modules
}